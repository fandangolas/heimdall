# Test environment configuration
# This file is used for integration tests with real PostgreSQL

# Database Configuration for Tests
POSTGRES_TEST_PASSWORD=heimdall_test_password
DATABASE_URL=postgresql+asyncpg://heimdall_test_user:heimdall_test_password@localhost:5433/heimdall_test

# Application Settings
ENVIRONMENT=test
HEIMDALL_VERSION=1.0.0-test
SECRET_KEY=test-secret-key-not-for-production-use
USE_POSTGRES=true

# JWT Configuration (less secure for faster tests)
JWT_SECRET_KEY=test-jwt-secret-key-not-for-production-use
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=5  # Shorter for faster test cycles
JWT_REFRESH_EXPIRATION_DAYS=1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1  # Single worker for tests

# Logging (more verbose for debugging)
LOG_LEVEL=DEBUG